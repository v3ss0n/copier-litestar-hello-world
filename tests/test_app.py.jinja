from litestar.testing import TestClient

from app import app


def test_sync() -> None:
    with TestClient(app=app) as client:
        assert client.get("/sync").json() == {
            "hello": "{{project_name}} - {{author_name}}"
        }


def test_async() -> None:
    with TestClient(app=app) as client:
        assert client.get("/async").json() == {
            "hello": "{{project_name}} - {{author_name}}"
        }
